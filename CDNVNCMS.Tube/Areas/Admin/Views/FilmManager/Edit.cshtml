@model CDNVNCMS.Tube.Entities.Film

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-horizontal">

        @Html.Partial("_formEditFilm", Model)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CreatedDate)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-primary" type="submit" value="Cập nhật" /> 
                @Html.ActionLink("Sữa Lỗi", "ErrorDetails", "FilmManager", new {id =Model.Id}, new { @class = "btn btn-warning" })
                @Html.ActionLink("Xem Phim", "FilmDetails", "Film", new { area ="", keyword = Model.SEOName }, new { @class = "btn btn-info" })
                @Html.ActionLink("Trở lại quản lý", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}



@section scripts
{
    <script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")" type="text/javascript"></script>
}
